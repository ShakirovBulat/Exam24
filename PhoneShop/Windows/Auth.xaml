<Window x:Class="PhoneShop.Windows.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneShop.Windows"
        mc:Ignorable="d"
        Title="Auth" Height="450" Width="800">
    <Grid>
        <Label Content="Магазин телефонов Звоночек" HorizontalAlignment="Center" FontSize="24" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="LoginTB" HorizontalAlignment="Left" Margin="96,85,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Логин" HorizontalAlignment="Left" FontSize="12" Margin="96,59,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" FontSize="12" Margin="96,113,0,0" VerticalAlignment="Top"/>
        <Button Content="Авторизация" HorizontalAlignment="Left" Margin="140,178,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <PasswordBox x:Name="PasswordTB" HorizontalAlignment="Left" Margin="96,139,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
